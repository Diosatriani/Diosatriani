<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dio.satriani.aplikasipertama.MainActivity"
    android:textAlignment="center">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Dio!"
        android:id="@+id/textView"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="#f30f0f"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Latihan awal bereksperimen dengan Android sungguh menyenangkan"
        android:id="@+id/textView3"
        android:layout_marginTop="22dp"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:textColor="#cc0101"
        android:fontFamily="@string/abc_action_menu_overflow_description"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#f7f0f0" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/batman"
        android:nestedScrollingEnabled="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
